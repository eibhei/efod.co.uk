{
  "defaults": {
    "markdownFileExtensions": ["md"],
    "directories": ["_posts"]
  },
  "rules": {
    "frontmatter": [
      {
        "field": "layout",
        "required": true,
        "rule": "layout.js"
      },
      {
        "field": "title",
        "required": true,
        "rule": "title.js"
      },
      {
        "field": "date",
        "required": true,
        "rule": "date.js"
      },
      {
        "field": "tags",
        "required": true,
        "rule": "tags.js"
      },
      {
        "field": "image",
        "required": true,
        "rule": "image.js"
      },
      {
        "field": "excerpt",
        "required": true,
        "rule": "excerpt.js"
      }
    ]
  }
}